@model AppCurso.Models.Curso

@{
    ViewData["Title"] = "Detalhes do Curso";
}

<h1>Detalhar</h1>

<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sumario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sumario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DuracaoEmMinutos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DuracaoEmMinutos)
            <label>&nbsp</label>
            <label>&nbsp</label>
            <label>(</label>
            @Html.DisplayFor(model => model.DuracaoEmHoras)
            <label>&nbsp</label>
            @Html.DisplayNameFor(model => model.DuracaoEmHoras)
            <label>)</label>
        </dd>
    </dl>
    <hr />

    <div class="accordion">
        @foreach (var modulo in Model.Modulos)
        {
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true">
                        <div class="container">
                            <div class="row row-cols-auto">
                                <div class="col">
                                    <b>
                                        @Html.DisplayNameFor(modelItem => modulo.OrdemExibicao)
                                        <label>:&nbsp</label>
                                        @Html.DisplayFor(modelItem => modulo.OrdemExibicao)
                                    </b>
                                </div>
                                <div class="col">
                                    <b>
                                        @Html.DisplayNameFor(modelItem => modulo.Id)
                                        <label>:&nbsp</label>
                                        @Html.DisplayFor(modelItem => modulo.Id)
                                    </b>
                                </div>
                                <div class="col">
                                    <b>
                                        @Html.DisplayNameFor(modelItem => modulo.Titulo)
                                        <label>:&nbsp</label>
                                        @Html.DisplayFor(modelItem => modulo.Titulo)
                                    </b>
                                </div>
                            </div>
                        </div>
                    </button>
                </h2>
            </div>
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar para a listagem</a>
</div>
