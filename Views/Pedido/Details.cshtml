@model AppCurso.Models.Pedido

@{
    ViewData["Title"] = "Detalhes do Pedido";
}

<h1>Detalhar</h1>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
    <div style="font-weight: lighter;">
        @foreach (Produto produto in Model.Produtos)
        {
            <dl class="row">
                <dt class="col-sm-2" style="font-weight:lighter">
                    @Html.DisplayNameFor(modelItem => produto.Id)
                </dt>
                <dd class="col-sm-10" style="font-weight:lighter">
                    @Html.DisplayFor(modelItem => produto.Id)
                </dd>
                <dt class="col-sm-2" style="font-weight:lighter">
                    @Html.DisplayNameFor(modelItem => produto.Descricao)
                </dt>
                <dd class="col-sm-10" style="font-weight:lighter">
                    @Html.DisplayFor(modelItem => produto.Descricao)
                </dd>
                <dt class="col-sm-2" style="font-weight:lighter">
                    @Html.DisplayNameFor(modelItem => produto.Preco)
                </dt>
                <dd class="col-sm-10" style="font-weight:lighter">
                    @produto.Preco.ToString("C")
                </dd>
            </dl>
        }
    </div>
</div>
<div>
    <a asp-action="Index">Listagem dos Pedidos</a>
</div>
